#!/bin/bash

# shellcheck disable=SC1090
source "${HOME}/bin/wm"

xrandr --output eDP1 --primary --mode 2880x1800 --pos 2560x0 --rotate normal \
  --output DP2 --mode 2560x1440 --pos 0x0 --rotate normal \
  --output VIRTUAL1 --off \
  --output DP1 --off \
  --output HDMI3 --off \
  --output HDMI2 --off \
  --output HDMI1 --off

io::keyboard

browser::set_scale chromium 1.6
browser::set_scale google-chrome-stable 1
dpi::sublime 1.0 15
dpi::terminal 10
dpi::i3 7
dpi::gtk 9
dpi::idea 19 15

"${HOME}/.i3/wallpaper.sh"
