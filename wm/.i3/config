# modifiers
set $mod Mod4
set $alt Mod1

font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start more windows floating.
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# terminals
bindsym $mod+Return exec urxvt
bindsym $mod+t exec thunar
bindsym $mod+slash exec wm browser::launch chromium
bindsym $mod+Shift+slash exec wm browser::launch google-chrome-stable

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $alt+space exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -l 15 -p 'dmenu'"

# start winmenu (dmenu wrapper for switching windows)
bindsym $mod+space exec --no-startup-id ~/.i3/python/winmenu.py

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+o split v

# split in vertical orientation
bindsym $mod+e split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+d layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# make floating window sticky
bindsym $mod+Shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $alt+Tab focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+g focus child

set $www_ws  workspace "1: www"
set $sh_ws   workspace "2: sh"
set $misc_ws  workspace "3: misc"

# switch to workspace
bindsym $mod+1 $www_ws
bindsym $mod+2 $sh_ws
bindsym $mod+3 $misc_ws
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8

# move focused container to workspace
bindsym $mod+Shift+1 move container to $www_ws
bindsym $mod+Shift+2 move container to $sh_ws
bindsym $mod+Shift+3 move container to $misc_ws
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8

# Move the current workspace to the next output
bindsym $mod+x move workspace to output right

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym $mod+h resize shrink width 10 px or 10 ppt
    bindsym $mod+j resize grow height 10 px or 10 ppt
    bindsym $mod+k resize shrink height 10 px or 10 ppt
    bindsym $mod+l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        # Whole color settings
        background #242424
        statusline #ffffff
        separator  #666666

        # Type             border  background font
        focused_workspace  #008fff #007fff #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }
    # i3bar position
    position top
    output eDP1
    # Using custom i3status.conf
    status_command i3status -c ~/.i3/i3status.conf
}

# locker
set $Locker ~/.i3/locker.sh
exec --no-startup-id $Locker -c 000000
exec --no-startup-id xautolock -time 10 -locker "$Locker"

# scripted startup
exec --no-startup-id ~/bin/startup-i3

# Background image
exec --no-startup-id ~/.i3/wallpaper.sh

# No title bars
new_window pixel 1

# Brightness controls
bindsym XF86MonBrightnessUp exec ~/bin/lux -a10%
bindsym XF86MonBrightnessDown exec ~/bin/lux -s10%
bindsym XF86KbdBrightnessUp exec ~/bin/lux -c /sys/class/leds/smc::kbd_backlight -a10%
bindsym XF86KbdBrightnessDown exec ~/bin/lux -c /sys/class/leds/smc::kbd_backlight -s10%

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshots
bindsym 0xff61 exec escrotum -s "~/Dropbox/Screenshots/$(date '+%y%m%d_%H%M%S')_$(openssl rand -hex 16).png"
bindsym XF86LaunchA exec escrotum -s "~/Dropbox/Screenshots/$(date '+%y%m%d_%H%M%S')_$(openssl rand -hex 16).png"

# System menu
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"
bindsym XF86PowerOff mode "$mode_system"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# reload the configuration file
bindsym $mod+Ctrl+r reload

# Application management
focus_on_window_activation focus
focus_follows_mouse no
hide_edge_borders horizontal
