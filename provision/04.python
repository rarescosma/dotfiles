if [ <%- provision.env %> = true ] ; then
	PKGS+=' python-pip'
	POSTFIX+=";sudo pip install virtualenvwrapper"

	if [ "<%- zsh.theme_oh_my_zsh %>" = "ric" ] ; then
		if ! grep -q "refresh_prompt" $HOME/.virtualenvs/postactivate; then
			POSTFIX+=";echo 'refresh_prompt' >> $HOME/.virtualenvs/postactivate"
		fi
		if ! grep -q "refresh_prompt" $HOME/.virtualenvs/postdeactivate; then
			POSTFIX+=";echo 'refresh_prompt' >> $HOME/.virtualenvs/postdeactivate"
		fi
	fi
fi
