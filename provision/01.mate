if [ <%- provision.mate %> = true ] ; then
	if ! grep -q "http://repo.mate-desktop.org" /etc/apt/sources.list; then
		sudo add-apt-repository "deb http://repo.mate-desktop.org/archive/1.8/ubuntu $(lsb_release -cs) main"
	fi

	wget -q http://mirror1.mate-desktop.org/debian/mate-archive-keyring.gpg -O- | sudo apt-key add -

	sudo apt-get update --yes
	sudo apt-get install --yes mate-core mate-desktop-environment lightdm-gtk-greeter ubuntu-artwork build-essential
fi