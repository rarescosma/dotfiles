# Bin
PATH="$PATH:$HOME/_/bin:$HOME/_/aws/bin:/srv/bin"

# AWS
export AWS_CREDENTIAL_FILE="$HOME/.ssh/rds"
export EC2_REGION="eu-west-1"

# Java
export JAVA_HOME="/usr"

# Node
NPM_PACKAGES="$HOME/.npm-packages"
PATH="$NPM_PACKAGES/bin:$PATH"
unset MANPATH
MANPATH="$NPM_PACKAGES/share/man:$(manpath)"
NODE_PATH="$NPM_PACKAGES/lib/node_modules:$NODE_PATH"
export NODE_ENV=dev

# Golang
export GOPATH="/home/karelian/_/go"
PATH="$PATH:$HOME/_/go/bin"

# PHP
PATH="$PATH:$HOME/.composer/vendor/bin"

# Ruby
source /usr/share/chruby/chruby.sh
chruby ruby-2.3.0

# Solarized MC
export MC_SKIN=$HOME/.config/mc/solarized.ini

# Z - Prevent ~ spamming
export _Z_DATA=/var/tmp/karelian.z

# Env-setup
export S3CFG_BASE=/srv/gits/env-setup/ami
